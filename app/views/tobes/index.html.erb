<div class ="row">
	<div class = "span10">
		<h2>Everyone wants to be...</h2>
	</div>
	<div class = "span2" >

		<a class="btn btn-primary" href="<%= new_tobe_path %>"><i class="icon-white icon-plus-sign"></i> New To Be</a>
	</div>
</div>
		
 
<div class ="row">
	<div class ="span2">
	    <ul class="nav nav-list">
	      <li class="nav-header">Categories</li>
	    <% @categories.each do |category| %>
	      <li><%= link_to category.title, category %></li>
	    <% end %>
	  </ul>
	</div>
	<div class = "span10">
		 <ul class="thumbnails">
		 	<% @tobes.each do | tobe | %>
		      <li class="span3">
		      	<div class="thumbnail" style="height:350px; padding:10px">
		          <img src ="<%= image_path("thumbnail.png") %>">
		          	<div class="caption">
			      		<h4><a href="<%= tobe_path(tobe) %>">I want to be <%= tobe.title %> because <%= tobe.reason %></a></h4>
						<p> - <a href="<%= user_path(tobe.user) %>"> <%= tobe.user.email %></a><br>
						<%= time_ago_in_words( tobe.created_at ) %> ago
					</div>
				</div>
				</p>
		      </li>
		     <% end %>
		</ul>
	</div>
</div>